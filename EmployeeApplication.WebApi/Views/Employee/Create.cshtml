
@model EmployeeApplication.Application.Employees.Queries.GetAllEmployees.EmployeeListVm;

<div>
    <form method="POST" asp-controller="Employee" asp-action="Create" enctype="multipart/form-data">
        <h2>Add new employee</h2>
        <div class="formItems">
            <div class="Inlines">
                <div class="leftSide">
                    <div class="Item">
                        <label>Name</label>
                        <input asp-for="@Model.CreateEmployee.Name" type="text" />
                    </div>
                    <div class="Item">
                        <label>Surname</label>
                        <input asp-for="@Model.CreateEmployee.Surname"></input>
                    </div>
                    <div class="Item">
                        <label>Age</label>
                        <input asp-for="@Model.CreateEmployee.Age"></input>
                    </div>
                </div>

                <div class="rightSide">
                    <div class="Item">
                        <label>Department</label>
                        <select asp-for="@Model.CreateEmployee.DepartmentId">
                            @{
                                foreach (var dep in Model.Lookupsd)
                                {
                                    <option value="@dep.Id">@dep.Name</option>
                                }
                            }
                        </select>

                    </div>
                    <div class="Item">
                        <label>Language</label>
                        <select asp-for="@Model.CreateEmployee.ProgrammingLanguageId">
                            @{
                                foreach (var dep in Model.Lookupp)
                                {
                                    <option value="@dep.Id">@dep.Name</option>
                                }
                            }
                        </select>

                    </div>

                    <div class="Item">
                        <label>Gender</label>
                        <select asp-for="@Model.CreateEmployee.Gender">
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>

                </div>
            </div>
            <div class="Blocked">
                <div class="ItemBlock BlockButt">

                    <div>
                        <button class="createbtn"><input type="submit" /></button>


                    </div>
                </div>
            </div>
    </form>

</div>
<div class="canc">
    <a asp-action="GetAll"><button class="cancelbth">Cancel</button></a>
</div >
